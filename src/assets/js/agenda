document.addEventListener("DOMContentLoaded", function () {
  const agendaData = [
    {
      icon: "bi-calendar-event",
      title: "Upacara Hari Pahlawan",
      date: "10 November 2025",
      desc: "Menghormati jasa pahlawan nasional melalui kegiatan upacara dan lomba bertema perjuangan."
    },
    {
      icon: "bi-book",
      title: "Penilaian Akhir Semester Ganjil",
      date: "2 - 13 Desember 2025",
      desc: "Evaluasi hasil belajar siswa untuk menentukan kenaikan kelas semester ganjil."
    },
    {
      icon: "bi-people",
      title: "Kunjungan Industri",
      date: "20 Januari 2026",
      desc: "Kegiatan lapangan untuk mengenalkan dunia kerja dan industri kepada siswa kelas XII."
    },
    {
      icon: "bi-award",
      title: "Penerimaan Sertifikat Lomba",
      date: "15 Februari 2026",
      desc: "Penyerahan penghargaan kepada siswa berprestasi tingkat provinsi."
    }
  ];

  const container = document.getElementById("agendaContainer");

  agendaData.forEach((agenda, index) => {
    const card = document.createElement("div");
    card.className = "col-md-4 col-sm-6";
    card.innerHTML = `
      <div class="agenda-card shadow-sm" style="animation-delay: ${0.2 * (index + 1)}s;">
        <div class="agenda-icon"><i class="bi ${agenda.icon}"></i></div>
        <h5 class="mt-3 fw-semibold">${agenda.title}</h5>
        <p class="text-muted small mb-1"><i class="bi bi-clock me-1"></i> ${agenda.date}</p>
        <p class="agenda-text">${agenda.desc}</p>
      </div>
    `;
    container.appendChild(card);
  });
});
